<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TransEng" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/quicksand_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TransViewStyle">
        <item name="android:windowEnterAnimation">@anim/open_scroll_from_top</item>
        <item name="android:windowExitAnimation">@anim/exit_fade_in</item>
    </style>

    <style name="IconStyle">
        <item name="android:windowEnterAnimation">@anim/open_fade_out</item>
        <item name="android:windowExitAnimation">@anim/exit_fade_in</item>
    </style>

</resources>