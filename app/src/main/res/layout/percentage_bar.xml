<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/itemPercentage1"
        android:layout_width="0dp"
        android:layout_height="@dimen/stroke_big"

        android:backgroundTint="@color/black"
        android:background="@drawable/custom_rounded_medium"
        android:elevation="@dimen/elevation_medium"
        android:layout_marginTop="@dimen/margin_smallest"
        android:layout_marginEnd="@dimen/margin_supreme_small"

        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintEnd_toStartOf="@id/itemPercentage2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/itemPercentage2"
        android:layout_width="0dp"
        android:layout_height="@dimen/stroke_big"

        android:backgroundTint="@color/black"
        android:background="@drawable/custom_rounded_medium"
        android:elevation="@dimen/elevation_medium"
        android:layout_marginTop="@dimen/margin_smallest"
        android:layout_marginEnd="@dimen/margin_supreme_small"

        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintStart_toEndOf="@id/itemPercentage1"
        app:layout_constraintEnd_toStartOf="@id/itemPercentage3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/itemPercentage3"
        android:layout_width="0dp"
        android:layout_height="@dimen/stroke_big"

        android:backgroundTint="@color/black"
        android:background="@drawable/custom_rounded_medium"
        android:elevation="@dimen/elevation_medium"
        android:layout_marginTop="@dimen/margin_smallest"

        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintStart_toEndOf="@id/itemPercentage2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>