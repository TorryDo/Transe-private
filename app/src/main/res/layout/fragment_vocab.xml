<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainAppScreen.vocabScreen.VocabFragment"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vocabMainActionBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionbar_height"

        android:layout_margin="@dimen/margin_medium"
        android:backgroundTint="@color/main_color"

        app:cardCornerRadius="@dimen/rounded_corner_medium"
        app:cardElevation="@dimen/elevation_small"

        app:layout_constraintBottom_toTopOf="@id/vocabRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vocabMainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_weight="1"

                android:backgroundTint="@color/theme_color"
                android:layout_gravity="start|center"

                android:text="require 'display over other app'"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_weight="1"
                android:layout_gravity="end|center"

                android:src="@drawable/ic_3dots_vertical"

                />



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vocabRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vocabMainActionBar" />

</androidx.constraintlayout.widget.ConstraintLayout>